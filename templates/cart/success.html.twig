{% extends 'base.html.twig' %}

{% block metadescription %}Votre commande a été validée avec succeès{% endblock %}
{% block title %}Commande validée{% endblock %}
{% block body %}
<div class="container mt-5">
    <div class="jumbotron">
        <h1 class="display-4 text-center">Votre commande est validée !</h1>
            <div class="text-center">
                <img src="{{ asset('build/validation.svg') }}" alt="validation image" width="40%">
            </div>
        <div class="text-center">
        {% if is_granted('ROLE_BUYER') %}
            <a href="{{path('buyer_index')}}" class="btn btn-success">Retour sur Hall in Bio</a>
        {% else %}
            <a href="{{path('seller_index')}}" class="btn btn-success">Retour sur Hall in Bio</a>
        {% endif %}
        </div> 
    </div>
</div>
{% endblock %}